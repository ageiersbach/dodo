<h1>Endangered Species</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Candidate</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @endangered_species.each do |endangered_specy| %>
      <tr>
        <td><%= endangered_specy.name %></td>
        <td><%= endangered_specy.candidate %></td>
        <td><%= endangered_specy.priority %></td>
        <td><%= link_to 'Show', endangered_specy %></td>
        <td><%= link_to 'Edit', edit_endangered_specy_path(endangered_specy) %></td>
        <td><%= link_to 'Destroy', endangered_specy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Endangered Species', new_endangered_specy_path %>
